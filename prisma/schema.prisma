generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model EmailVerification {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  codeHash     String
  expiresAt    DateTime
  attempts     Int      @default(0)
  lastSentAt   DateTime @default(now())
  createdAt    DateTime @default(now())
}
model PasswordReset {
  id         String   @id @default(cuid())
  email      String   @unique
  codeHash   String
  expiresAt  DateTime
  attempts   Int      @default(0)
  lastSentAt DateTime @default(now())
  createdAt  DateTime @default(now())
}
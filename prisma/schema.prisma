generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  logs      ExerciseLog[]
  exercises Exercise[] @relation("UserExercises")
}

model EmailVerification {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  codeHash     String
  expiresAt    DateTime
  attempts     Int      @default(0)
  lastSentAt   DateTime @default(now())
  createdAt    DateTime @default(now())
}
model PasswordReset {
  id         String   @id @default(cuid())
  email      String   @unique
  codeHash   String
  expiresAt  DateTime
  attempts   Int      @default(0)
  lastSentAt DateTime @default(now())
  createdAt  DateTime @default(now())
}
enum Equipment {
  machine
  cable
  dumbbell
  barbell
  bodyweight
  other
}

enum Muscle {
  chest
  back
  legs
  shoulders
  arms
  core
  fullbody
  other
}

enum ExerciseVisibility {
  PUBLIC
  PRIVATE
}

model Exercise {
  id         String            @id @default(cuid())
  name       String
  equipment  Equipment
  muscle     Muscle
  notes      String?
  imageUrl   String?

  visibility ExerciseVisibility @default(PUBLIC)

  // jei PRIVATE – priklauso konkrečiam useriui
  ownerId    String?
  owner      User?             @relation("UserExercises", fields: [ownerId], references: [id], onDelete: SetNull)

  // admin patvirtinimas ateičiai
  approvedAt DateTime?
  approvedBy String?

  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  logs       ExerciseLog[]

  @@index([visibility])
  @@index([ownerId])
  @@index([name])
}

model ExerciseLog {
  id         String   @id @default(cuid())
  userId     String
  exerciseId String
  dateTime   DateTime @default(now())

  weightKg   Decimal  @db.Decimal(7,3) // ✅ 3 skaičiai po kablelio
  reps       Int
  comment    String?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@index([userId, dateTime])
  @@index([exerciseId, dateTime])
}

